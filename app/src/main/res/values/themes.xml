<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royalblue</item>
        <item name="colorPrimaryDark">@color/royalblue</item>
        <item name="colorAccent">@color/royalblue</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/lightroyalblue</item>

    </style>

    <style name="Theme.Notes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>